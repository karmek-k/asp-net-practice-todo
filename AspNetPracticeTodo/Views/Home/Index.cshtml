@model IEnumerable<TodoList>
@{
    ViewData["Title"] = "Home";
}

<h1>Practice To-do</h1>

@if (Model.Any())
{
    <ol>
        @foreach (var list in Model)
        {
            <li>@Html.DisplayFor(m => list.Name)</li>
        }
    </ol>
}
else
{
    <i>No lists</i>
}

<a asp-action="CreateList">Create a list</a>
