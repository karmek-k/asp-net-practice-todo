@model TodoList
@{ 
    ViewData["Title"] = "Create a List";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateList" method="post">    
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <br />

    <label asp-for="Description"></label>
    <textarea asp-for="Description"></textarea>
    <br />

    <input type="submit" />
</form>
