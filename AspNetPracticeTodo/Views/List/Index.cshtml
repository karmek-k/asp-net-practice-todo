@model IList<TodoItem>
@{
    var todoItem = Model.FirstOrDefault();
    ViewData["TodoListDesc"] = todoItem != null ? todoItem.TodoList.Description : "No description";
}

<h1>@ViewData["Title"] - To-do items</h1>
<p>@ViewData["TodoListDesc"]</p>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(m => m[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m[0].Done)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            @if (item.Done)
            {
                <td class="item-done">Yes</td>
            }
            else
            {
                <td class="item-undone">No</td>
            }
        </tr>
    }
</table>